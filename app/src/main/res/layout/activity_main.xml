<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.memo.getspointsinimageview.Offline">
    <ImageView

        app:srcCompat="@android:color/black"
        android:src="@drawable/test1"
        android:layout_width="match_parent"
        android:scaleType="centerInside"
        android:layout_height="match_parent"
        android:id="@+id/img_tmp"
        android:visibility="invisible"
        android:adjustViewBounds="true" />


    <ImageView

        app:srcCompat="@android:color/black"
        android:src="@drawable/test1"
        android:layout_width="match_parent"
        android:scaleType="centerInside"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:adjustViewBounds="true"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView

        app:srcCompat="@android:color/black"
        android:src="@drawable/zoom"
        android:layout_width="40dp"
        android:scaleType="fitCenter"
        android:layout_height="40dp"
        android:id="@+id/imv_circle1"
        android:adjustViewBounds="true"
        android:layout_marginBottom="109dp"
        android:layout_centerHorizontal="true" />

    <ImageView

        app:srcCompat="@android:color/black"
        android:src="@drawable/zoom"
        android:layout_width="40dp"
        android:scaleType="fitCenter"
        android:layout_height="40dp"
        android:id="@+id/imv_circle2"
        android:adjustViewBounds="true"
        android:layout_marginBottom="175dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/imv_circle1"
        android:layout_toEndOf="@+id/imv_circle1" />

    <ImageView

        app:srcCompat="@android:color/black"
        android:layout_width="80dp"
        android:scaleType="fitCenter"
        android:layout_height="80dp"
        android:id="@+id/imageView2"

        android:adjustViewBounds="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <ImageView

        app:srcCompat="@android:color/transparent"
        android:src="@drawable/snip2"
        android:layout_width="80dp"
        android:scaleType="fitCenter"
        android:layout_height="80dp"
        android:id="@+id/img_snip"

        android:adjustViewBounds="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="TextView"
                android:textColor="#ffff00"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />


    <Button
        android:id="@+id/btn_ref"
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:text="Take Reference Length"
        android:textColor="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/take_ref"
        android:visibility="invisible"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_save_image"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:visibility="invisible"
        android:background="@drawable/sa"
        android:textColor="@android:color/holo_blue_dark"/>

    <SeekBar
        android:id="@+id/region_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_mode"
        android:layout_toStartOf="@+id/imageView2"
        android:visibility="invisible"
        style="@style/Widget.AppCompat.SeekBar"
        android:layout_alignRight="@+id/btn_ref"
        android:layout_alignEnd="@+id/btn_ref"
        android:layout_toLeftOf="@+id/imageView2" />

    <ImageButton
        android:id="@+id/imgClose"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="right|top"
        android:background="@drawable/r"
        android:padding="20dp" />

    <Switch
        android:id="@+id/switch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_blue_bright"
        android:text="output"
        android:textColor="@android:color/holo_blue_bright"
        android:textColorLink="@android:color/holo_blue_bright"
        android:textStyle="bold"
        android:layout_above="@+id/btn_ref"
        android:layout_alignParentRight="true"
        android:visibility="invisible"
        android:layout_alignParentEnd="true" />



    <Button
        android:id="@+id/btn_mode"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:background="@drawable/modes"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_above="@+id/btn_ref"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
